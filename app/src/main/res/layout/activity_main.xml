<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOAA Overview"
        android:textSize="40sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp" />

    <TextView
        android:id="@+id/SolarWind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading SolarWind Data"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/scale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading NOAA Scale"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/SolarWind"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/buttonRealtimeCoronagraph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Realtime Coronagraph"
        android:onClick="openRealtimeCoronagraph"
        app:layout_constraintTop_toBottomOf="@id/scale"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/buttonSolarWindPrediction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solar Wind Prediction"
        android:onClick="openSolarWindPrediction"
        app:layout_constraintTop_toBottomOf="@id/buttonRealtimeCoronagraph"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/buttonIndex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Index"
        android:onClick="openIndex"
        app:layout_constraintTop_toBottomOf="@id/buttonSolarWindPrediction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/buttonSolarWindData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solar Wind Data"
        android:onClick="openSolarWindData"
        app:layout_constraintTop_toBottomOf="@id/buttonIndex"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/buttonAurora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aurora"
        android:onClick="openAurora"
        app:layout_constraintTop_toBottomOf="@id/buttonSolarWindData"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/buttonForecast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3-DAY Forecast"
        android:onClick="openForecast"
        app:layout_constraintTop_toBottomOf="@id/buttonAurora"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/buttonLightPollution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Light Pollution Map"
        android:onClick="openLightPollution"
        app:layout_constraintTop_toBottomOf="@id/buttonForecast"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/buttonQWeatherMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QWeather Map"
        android:onClick="openQWeatherMap"
        app:layout_constraintTop_toBottomOf="@id/buttonLightPollution"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/buttonWorldWeatherMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="World Weather Map"
        android:onClick="openWorldWeatherMap"
        app:layout_constraintTop_toBottomOf="@id/buttonQWeatherMap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/buttonWindyMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Windy Map"
        android:onClick="openWindyMap"
        app:layout_constraintTop_toBottomOf="@id/buttonWorldWeatherMap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />



</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>